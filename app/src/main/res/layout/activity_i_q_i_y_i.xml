<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rlay_touch_screen"
    android:layout_height="match_parent"
    tools:context=".IQIYIActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:id="@+id/screen_touch_area"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/unnamed"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/design_default_color_background"
            android:gravity="center"
            android:id="@+id/txt_main_screen_text"
            android:layout_alignParentBottom="true"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="500dp"
            android:layout_margin="8dp"
            app:cardElevation="5dp"
            android:visibility="gone"
            android:id="@+id/lin_seek"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="3dp"
            app:cardBackgroundColor="@color/trans_white"
            app:cardUseCompatPadding="true"
            android:layout_height="70dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_seek"
                    />
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:layout_width="match_parent"
                    android:id="@+id/seek_bar"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>


</RelativeLayout>